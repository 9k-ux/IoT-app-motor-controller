<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#FFFFA500"
                android:endColor="#FFFFA500"
                android:angle="270"/>
            <solid
                android:color="#FFFFA500"
                />
            <stroke
                android:width="2dp"
                android:color="#FFFFA500" />
            <corners
                android:radius="1000dp"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#FFFFA500"
                android:endColor="#FFFFA500"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#FFFFA500" />
            <corners
                android:radius="1000dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
</selector>