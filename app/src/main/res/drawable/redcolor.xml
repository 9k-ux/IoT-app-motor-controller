<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#ffff"
                android:endColor="#008037"
                android:angle="270"/>
            <solid
                android:color="#ffff"
                />
            <stroke
                android:width="2dp"
                android:color="#ff1616" />
            <corners
                android:radius="1000dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#8B0000"
                android:endColor="#8B0000"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#8B0000" />
            <corners
                android:radius="1000dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
</selector>